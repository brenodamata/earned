<p id="notice"><%= notice %></p>

<h1>Incentives</h1>

<table>
  <thead>
    <tr>
      <th>Metric</th>
      <th>Merit</th>
      <th>Threshold</th>
      <th>Equation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incentives.each do |incentive| %>
      <tr>
        <td><%= incentive.metric %></td>
        <td><%= incentive.merit %></td>
        <td><%= incentive.threshold %></td>
        <td><%= incentive.equation %></td>
        <td><%= link_to 'Show', incentive %></td>
        <td><%= link_to 'Edit', edit_incentive_path(incentive) %></td>
        <td><%= link_to 'Destroy', incentive, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Incentive', new_incentive_path %>
