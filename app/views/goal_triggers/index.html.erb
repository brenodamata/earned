<p id="notice"><%= notice %></p>

<h1>Goal Triggers</h1>

<table>
  <thead>
    <tr>
      <th>Frequency</th>
      <th>Metric</th>
      <th>Trigger level</th>
      <th>Spoils</th>
      <th>Fee</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goal_triggers.each do |goal_trigger| %>
      <tr>
        <td><%= goal_trigger.frequency %></td>
        <td><%= goal_trigger.metric %></td>
        <td><%= goal_trigger.trigger_level %></td>
        <td><%= goal_trigger.spoils %></td>
        <td><%= goal_trigger.fee %></td>
        <td><%= goal_trigger.message %></td>
        <td><%= link_to 'Show', goal_trigger %></td>
        <td><%= link_to 'Edit', edit_goal_trigger_path(goal_trigger) %></td>
        <td><%= link_to 'Destroy', goal_trigger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

